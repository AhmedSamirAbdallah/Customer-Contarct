<odoo>
    <template id="customer_contract_report_temp">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="oe_structure">
                        <div class="page">
                            <h2>Customer Contract</h2>
                            <div class="container">
                                <div class="row">
                                    <div class="col-6">Customer:
                                         <t t-esc="o.customer.name"/>
                                    </div>
                                    <div class="col-6">State:
                                         <t t-esc="o.state"/>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-6">Start Date:
                                         <t t-esc="o.start_date"/>
                                    </div>
                                    <div class="col-6">End Date:
                                         <t t-esc="o.end_date"/>
                                    </div>
                                </div>
                                 <div class="row">
                                    <div class="col-6">Price:
                                         <t t-esc="o.price"/>
                                    </div>
                                    <div class="col-6">Avg Price Date:
                                         <t t-esc="o.avg_day_price"/>
                                    </div>
                                </div>
                                 <div class="row">
                                    <div class="col-6">Printed By:
                                         <t t-esc="user.name"/>
                                    </div>
                                </div>
                                <br/>
                                <div t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d %H:%M')" class="text-center"/>
                            </div>
